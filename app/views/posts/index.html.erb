<p id="notice"><%= notice %></p>

<section class="content-area">
<% Post.ordered_post.each do |post| %>
  <div class="card mb-3" style="max-width: 900px;">
  <div class="row">
    <div class="col-md-4">
    <%= image_tag(post.image_url, style: 'max-width: 100%;') %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <p><small><%= post.created_at.strftime("%d/%m/%Y") %></small></p>
        <h4 class="card-title"><%= post.capitalize_title%></h4>
        <h6 class="card-author">By <%= post.author%></h6>
        <p class="card-text"><%= post.body%></p>
        <button class="btn btn-outline-success"><%= link_to 'Read More', post%></button>
       
      </div>
    </div>
  </div>
  </div>
  <% end %>
</section>

